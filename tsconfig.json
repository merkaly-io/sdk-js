{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "declaration": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "types": [
      "axios",
      "@types/auth0",
      "@types/auth0-lock",
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./src"
  ]
}
