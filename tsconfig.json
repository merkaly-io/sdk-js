{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationDir": "./types",
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": [
      "@merkaly/api",
      "@nuxt/types",
      "@nuxtjs/auth-next",
      "@nuxtjs/axios"
    ],
    "types": [
      "@nuxtjs/auth-next",
      "@nuxtjs/axios",
      "@types/node",
      "@types/jest"
    ]
  },
  "include": [
    "./index.ts",
    "./main.ts",
    "./plugins/*",
    "./src/*",
    "nuxt.shim.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ]
}
