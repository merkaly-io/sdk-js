{
  "compilerOptions": {
    "target": "ES2018",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": [
      "ESNext",
      "ESNext.AsyncIterable",
      "DOM"
    ],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "typeRoots": [
      "@merkaly/api",
      "@nuxt/types",
    ],
    "types": [
      "@nuxtjs/auth-next",
      "@nuxtjs/axios",
      "@nuxtjs/proxy",
      "@types/auth0",
      "@types/dotenv",
      "@types/jest",
      "@types/node",
      "class-transformer"
    ],
    "paths": {
      "@merkaly/sdk-js/*": [
        "./*"
      ]
    }
  },
  "include": [
    "./nuxt/**/*.ts",
    "./src/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
